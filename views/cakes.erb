      <div class="col-sm">
        <h3>Red Velvet CheeseCake </h3>
        <div class="card" style="width: 18rem;" id='card-kadabra'>
            <ul ng-controller="GalleryCtrl">
                <li ng-repeat="image in images">
                  <a ng-click="openLightboxModal($index)">
                     <img ng-src="{{/photos/cakes/Redvelvet.jpeg}}" class="img-thumbnail">
                  </a>
                </li>
              </ul>
          <img class="card-img-top" src="/photos/cakes/Redvelvet.jpeg " alt="Card image cap" id="img01">
